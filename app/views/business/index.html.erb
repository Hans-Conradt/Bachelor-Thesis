<div class="container">
  <h1>Business Dashboard, <%="Hallo #{current_user.first_name}" %></h1>
  <div class="grid-container">
    <div class="child Area-1">
      <h2>Actual vs. Target Revenue </h2>
      <div class="btn-group btn-group-toggle m" data-toggle="buttons">
        <label class="btn btn-secondary active">
          <input type="radio" name="options" id="option1" checked> Year
        </label>
        <label class="btn btn-secondary">
          <input type="radio" name="options" id="option2"> Month
        </label>
        <label class="btn btn-secondary">
          <input type="radio" name="options" id="option3"> Day
          <%event = 1%>
        </label>
      </div>
      <div >
      </div>
    </div>
    <div class="child Area-2">
      <h2>Demand forecast vs. actual orders</h2>
      <div >
        <%= line_chart  [
        {name: "Target", data: OrderTarget.group(:time).count},
        {name: "Orders", data: Order.group(:time).count}
        ], ytitle: "Quantity"%>
      </div>
    </div>
    <div class="child Area-3">
      <div class="order-type child border Area-1">
      <div>
        <h2> Total Orders by Type</h2>
      <div class ="order-chart">
        <%= pie_chart Order.group(:t).count, donut: true, legend: false, colors: ["#175dad","#ad2817", "#e3e3e3"]%>
      </div>
      </div>
    </div>
    </div>
    <div class="child Area-4">
      <h2>Productivity of the production line</h2>
      <h2> Orders per Month </h2>
